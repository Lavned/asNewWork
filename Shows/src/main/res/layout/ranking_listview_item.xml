<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/hahah"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_jiangbei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/wawatwo"/>

        <com.com.shows.utils.CircleImageView
            android:id="@+id/image_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@mipmap/wawatwo"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/text_money"
            android:layout_toEndOf="@+id/image_jiangbei" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小灰灰"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:id="@+id/text_name"
            android:layout_alignTop="@+id/text_money"
            android:layout_toEndOf="@+id/image_head" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="100元"
            android:textColor="#ff0000"
            android:id="@+id/text_money"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_below="@+id/hahah"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>

</RelativeLayout>