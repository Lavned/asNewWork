<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/commandhead"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/videoplayclick"
                android:layout_height="200dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/videoimages"
                    android:scaleType="fitXY"
                    android:src="@mipmap/yinbeijing"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/player"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:textColor="#ff0000"
                android:textSize="14sp"
                android:text="温馨提示：视频广告播放完毕后才可领取该广告奖励！"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_adv_name"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:textColor="#1776ce"
                android:text="test"
                android:layout_height="wrap_content" />

            <com.shows.view.MyGridView
                android:id="@+id/images_urls"
                android:layout_width="match_parent"
                android:numColumns="1"
                android:verticalSpacing="5dp"
                android:columnWidth="10dp"
                android:stretchMode="columnWidth"
                android:paddingTop="2dp"
                android:layout_height="match_parent">

            </com.shows.view.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="top"
                        android:visibility="gone"
                        android:text="兰州西固亿鑫科科技"
                        android:textSize="18sp" />



                </LinearLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/tv_adv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="主营电子业务"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="商家二维码"
                        android:textSize="15sp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/im_adv_recode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhanweitu" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="top"
                        android:text="联系电话"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="153480025990"
                        android:textColor="#000"
                        android:textSize="20sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/im_telephone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@mipmap/dadianhau" />


                <ImageView
                    android:id="@+id/im_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@mipmap/message" />
                <ImageView
                    android:id="@+id/im_savetel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@mipmap/store" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:gravity="top"
                    android:text="商家网址"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_http_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="http://www.baidu.com"
                    android:textColor="#30B0EE"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:gravity="top"
                    android:text="商家地址"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="甘肃省兰州市西固区康乐路丝路电商茶叶园"
                    android:textColor="#000"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_traffic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="(市内乘坐K102路、50、77在西部市场下车直走500米)"
                    android:textColor="#ff0004"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>









</LinearLayout>
