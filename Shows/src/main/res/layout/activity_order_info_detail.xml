<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#10000000"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/resssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2FB1EB">

        <ImageView
            android:id="@+id/order_detail_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="订单详情"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称:"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可爱的小杯子"
            android:textColor="#80000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="90dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价:"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥9.99"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人姓名:"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_detail_getname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暖暖"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人电话:"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_detail_gettel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15348005992"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
    <RelativeLayout
        android:id="@+id/add_address_re"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址:"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_details_get_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ccc"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_detail_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/order_detail_yes_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认收货"
        android:padding="10dp"
        android:gravity="center"
        android:background="#2f60e6"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"/>

</LinearLayout>
