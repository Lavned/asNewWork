<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linlin"
        android:layout_below="@+id/order_title"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textColor="#90000000"
                android:text="秀秀自营"/>
            <TextView
                android:id="@+id/order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textColor="#ff0000"
                android:text="交易成功"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/order_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2">
                <com.shows.view.RoundCornerImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/disizhang"
                    android:scaleType="centerCrop"
                    android:id="@+id/order_head"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_weight="4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_name"
                    android:textColor="#000"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="5dp"
                    android:text="商品名称"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_stime"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:text="2016年8月15日"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1.3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_price"
                    android:textColor="#ff000d"
                    android:textSize="18sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="￥9.9"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/del_order"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:textColor="#ff0008"
            android:layout_gravity="right"
            android:text="删除这笔交易"/>
       <View
           android:layout_marginTop="3dp"
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="#50000000"/>
    </LinearLayout>
</LinearLayout>