<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/readd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2FB1EB">

        <ImageView
            android:id="@+id/add_ress_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="新增收货地址"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ren1"
        android:layout_below="@+id/readd"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收  货  人 :"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/get_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入收货人名称"
            android:background="@null"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/ren1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
    <RelativeLayout
        android:id="@+id/ren2"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手  机  号 :"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/get_good_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入收货人手机号"
            android:background="@null"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_below="@+id/ren2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
    <RelativeLayout
        android:id="@+id/ren4"
        android:layout_below="@+id/view2"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地        址 :"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/shouhuodizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="甘肃省兰州市"
            android:textColor="#80000000"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>

    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_below="@+id/ren4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>


    <RelativeLayout
        android:id="@+id/ren3"
        android:layout_below="@+id/view4"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址:"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/get_good_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入详细地址"
            android:background="@null"
            android:textColor="#80000000"
            android:textSize="16sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/ren3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>

    <TextView
        android:layout_below="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲，目前只支持兰州同城邮寄哦！"
        android:textColor="#ff0004"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/add_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:padding="10dp"
        android:gravity="center"
        android:background="#2f60e6"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"/>
</RelativeLayout>
