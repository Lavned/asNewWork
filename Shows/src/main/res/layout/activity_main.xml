<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/myframeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dibu"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/dibu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/re_s"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="首页"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#0072bb"
                        />
                    <ImageView
                        android:id="@+id/s_image"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_height="25dp"
                        android:src="@mipmap/xstu" />

                </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_h"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="秀秀商城"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:id="@+id/h_image"
                            android:layout_width="wrap_content"
                            android:layout_weight="0.4"
                            android:layout_height="25dp"
                            android:src="@mipmap/htu" />

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_o"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_o"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="同城圈"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:id="@+id/o_image"
                            android:layout_width="wrap_content"
                            android:layout_weight="0.4"
                            android:layout_height="25dp"
                            android:src="@mipmap/otu" />

                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_w"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_w"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="用户中心"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:id="@+id/w_image"
                            android:layout_width="wrap_content"
                            android:layout_weight="0.4"
                            android:layout_height="25dp"
                            android:src="@mipmap/wtu" />

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/version_update"
                        android:layout_width="18dp"
                        android:layout_marginLeft="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_height="18dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:background="@drawable/hdd"/>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>