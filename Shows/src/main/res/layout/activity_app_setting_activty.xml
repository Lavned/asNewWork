<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#0072bb"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="设置"/>

    <LinearLayout
        android:id="@+id/ste_content"
        android:layout_below="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/set_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/setting_text"
            android:text="通用设置" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>
        <TextView
            android:id="@+id/t_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/setting_text"
            android:text="免费声明" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>

        <TextView
            android:id="@+id/set_userhelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/setting_text"
            android:text="用户帮助" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>

        <RelativeLayout
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/set_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/setting_text"
                android:text="版本信息" />
            <ImageView
                android:id="@+id/updatetag"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/newupdate"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>

        <TextView
            android:id="@+id/set_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/setting_text"
            android:text="缓存" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>

    </LinearLayout>

    <Button
        android:id="@+id/exit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ste_content"
        android:background="@drawable/exitback"
        android:layout_margin="15dp"
        android:textColor="#fff"
        android:text="退出登录"/>
</RelativeLayout>
