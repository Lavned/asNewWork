<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30B0EE"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/title_back"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_btn_back" />

                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="商家信息"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </RelativeLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/ads_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/dotLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:orientation="horizontal" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_text_detail"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:textColor="#1776ce"
                android:text="test"
                android:layout_height="wrap_content" />

            <com.shows.view.MyGridView
                android:id="@+id/images_urls"
                android:layout_width="match_parent"
                android:numColumns="1"
                android:verticalSpacing="5dp"
                android:columnWidth="10dp"
                android:stretchMode="columnWidth"
                android:paddingTop="2dp"
                android:layout_height="match_parent">

            </com.shows.view.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/info_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wawatwo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="top"
                        android:visibility="gone"
                        android:text="兰州西固亿鑫科科技"
                        android:textSize="18sp" />



                </LinearLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="主营电子业务"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shoucangtips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="收藏该广告"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/shoucang"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center|center_vertical"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/shoucangweixuan"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"

                        android:text="商家二维码"
                        android:textSize="15sp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/im_good_shoper"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhanweitu" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="top"
                        android:text="联系电话"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="153480025990"
                        android:textColor="#000"
                        android:textSize="20sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/im_telephone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@mipmap/dadianhau" />


                <ImageView
                    android:id="@+id/im_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@mipmap/message" />
                <ImageView
                    android:id="@+id/im_savetel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="10dp"
                    android:src="@mipmap/store" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:gravity="top"
                    android:text="商家网址"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_http_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="http://www.baidu.com"
                    android:textColor="#30B0EE"
                    android:textSize="15sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:gravity="top"
                    android:text="商家地址"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="甘肃省兰州市西固区康乐路丝路电商茶叶园"
                    android:textColor="#000"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_traffic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="(市内乘坐K102路、50、77在西部市场下车直走500米)"
                    android:textColor="#ff0004"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#50000000" />

            <TextView
                android:id="@+id/tv_lingqu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="领取奖励"
                android:background="#30B0EE"
                android:textColor="#fff"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

