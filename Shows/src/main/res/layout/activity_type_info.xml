<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/titlebackground"
        android:id="@+id/type_lin">
        <ImageView
            android:id="@+id/type_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:src="@mipmap/icon_btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="个人广告中心"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/add_release"
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/release"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/type_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/type_house_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/type_housing"
                android:text="房产信息"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/type_second_hand_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:drawableTop="@mipmap/type_secondhand"
                android:text="二手交易"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/type_full_time_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/type_recruit"
                android:text="招聘信息"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/type_part_time_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/type_application"
                android:text="求职信息"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/type_food_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:drawableTop="@mipmap/type_catering"
                android:text="餐饮娱乐"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/type_car_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/type_dating"
                android:text="相亲交友"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/type_photography_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/type_finding"
                android:text="寻人寻物"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/type_education_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:drawableTop="@mipmap/type_education"
                android:text="教育培训"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="#50000000"/>
            <TextView
                android:id="@+id/type_medical_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/type_all"
                android:text="所有信息"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50000000"/>
    </LinearLayout>

</RelativeLayout>
