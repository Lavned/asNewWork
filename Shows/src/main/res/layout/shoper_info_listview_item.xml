<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:text="【我是个可爱的小杯子】"
            android:singleLine="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/show_info_title" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:id="@+id/show_info_head"
            android:src="@mipmap/diyizhang"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:text="可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的可爱的"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/show_info_detail" />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#fa0505"
                android:text="￥5.0"
                android:singleLine="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/show_info_price" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="4852人喜欢"
                android:singleLine="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/show_info_likenum" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="查看详情"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#fc0505"
            android:background="@drawable/searchback"
            android:singleLine="true"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/show_info_look_detail" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"/>
</LinearLayout>